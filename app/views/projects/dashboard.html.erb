<h2>My Projects</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>        </th>
      <th>        </th>
      <th>        </th>
      <th>        </th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %>  </td>
        <td><%= project.description %>   </td>
        <td><%= link_to 'View', project %>   </td>
        <% if @current_user and (@current_user.role.eql? "admin" or project.user_id == @current_user.id) %>
          <td><%= link_to 'Edit', edit_project_path(project) %>  </td>
          <td><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %>  </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br />
<%= link_to 'New Project', new_project_path %>
