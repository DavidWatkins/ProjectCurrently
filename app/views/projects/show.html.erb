

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Owner:</strong>
  <%= User.find(@project.user_id).name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Picture:</strong>
  <%= image_tag(@project.picture_url, :width => 600) if @project.picture.present? %>
</p>

<h3>Comments</h3>  

<ul id="comments" class="formList">  
  <% @project.comments.each do |comment| %>
    <% if comment.content and !(comment.content.eql? "") %>
      <li><div class="commentBox"><%= comment.content %></div></li>
    <% end %>
  <% end %>  
</ul>

<% if @current_user %>
  <h5>New Comment</h5>  
  <%= form_for @comment do |f| %> 
    <ol class="formList">  
      <li>  
        <br />
        <%= f.text_area :content, :rows => 5 %>
        <%= f.hidden_field :project_id %>
      </li>  
      <li><%= f.submit "Add comment" %></li>  
    </ol>  
  <% end %>
<% end %>
  
<% if @current_user and (@current_user.role.eql? "admin" or @project.user_id == @current_user.id) %>

  <%= link_to 'Edit', edit_project_path(@project) %>

<% end %>